extends layout

block contenido 
    .contenido-principal
        h1=nombrePagina

        h2 Hola

        if errores
            each error in errores
                .alerta= error.texto
        

        form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
            .campo
                label(for="nombre") Nombre Proyecto: 
                input(type="text" id="nombre" name="nombre" placeholder="Nuevo Proyecto")
            .campo.enviar 
                input(type="submit" value="Agregar" class="boton")